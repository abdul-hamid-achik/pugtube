{
  "parserOptions": {
    "project": "./tsconfig.json"
  },
  "plugins": [
    "prettier",
    "unused-imports",
    "tailwindcss"
  ],
  "extends": [
    "next/core-web-vitals",
    "plugin:tailwindcss/recommended",
    "plugin:storybook/recommended"
  ],
  "overrides": [
    {
      "files": ["*.{ts,tsx}", "!(**/*).(spec|test).(ts|tsx)"],
      "rules": {
        "tailwindcss/no-custom-classname": "off"
      }
    }
  ]
}
