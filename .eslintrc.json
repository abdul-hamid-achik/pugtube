{
  "parserOptions": {
    "project": "./tsconfig.json"
  },
  "plugins": [
    "prettier",
    "unused-imports",
    "tailwindcss"
  ],
  "extends": [
    "next/core-web-vitals",
    "plugin:tailwindcss/recommended"
  ],
  "overrides": [
    {
      "files": [
        "*.ts",
        "*.tsx",
        "!**/*.spec.ts",
        "!**/*.spec.tsx",
        "!**/*.test.ts",
        "!**/*.test.tsx"
      ],
      "excludedFiles": [
        "**/*.spec.ts",
        "**/*.spec.tsx",
        "**/*.test.ts",
        "**/*.test.tsx"
      ],
      "rules": {
        "tailwindcss/no-custom-classname": "off"
      }
    }
  ]
}
