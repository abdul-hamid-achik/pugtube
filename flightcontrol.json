{
  "$schema": "https://app.flightcontrol.dev/schema.json",
  "environments": [
    {
      "id": "production",
      "name": "Production",
      "region": "us-west-1",
      "source": {
        "branch": "main"
      },
      "services": [
        {
          "id": "frontend",
          "name": "www.pugtube.dev",
          "type": "fargate",
          "watchPaths": ["./web/**"],
          "cpu": 0.25,
          "memory": 0.5,
          "domain": "www.pugtube.dev",
          "minInstances": 1,
          "maxInstances": 1,
          "dockerfilePath": "./web/Dockerfile",
          "dockerContext": "./web",
          "port": 3000,
          "dependsOn": ["backend"],
          "envVariables": {
            "NODE_ENV": "production",
            "DATABASE_URL": {
              "fromService": {
                "id": "db",
                "value": "dbConnectionString"
              }
            }
          }
        },
        {
          "id": "backend",
          "name": "api.pugtube.dev",
          "type": "fargate",
          "dockerfilePath": "./api/Dockerfile",
          "dockerContext": "./api",
          "watchPaths": ["./api/**"],
          "cpu": 0.25,
          "memory": 0.5,
          "domain": "api.pugtube.dev",
          "port": 8080,
          "minInstances": 1,
          "maxInstances": 1,
          "dependsOn": ["db"],
          "healthCheckPath": "/health",
          "envVariables": {
            "DEBUG": false,
            "BASE_URL": "https://api.pugtube.dev",
            "DATABASE_URL": {
              "fromService": {
                "id": "db",
                "value": "dbConnectionString"
              }
            },
            "DOCKER_USERNAME": {
              "fromParameterStore": "fc.pugtube.env.production.ut23q03da.DOCKER_USERNAME"
            },
            "DOCKER_PASSWORD": {
              "fromParameterStore": "fc.pugtube.env.production.ut23r03wk.DOCKER_PASSWORD"
            }
          }
        },
        {
          "id": "db",
          "name": "Database",
          "type": "rds",
          "engine": "postgres",
          "engineVersion": "13",
          "instanceSize": "db.t4g.micro",
          "storage": 20,
          "private": false
        }
      ]
    },
    {
      "id": "preview",
      "name": "Preview Environment",
      "region": "us-west-1",
      "source": {
        "pr": true,
        "filter":  {
          "labels": ["preview"],
          "toBranches": ["main"]
        }
      },
      "services": [
        {
          "id": "frontend",
          "name": "PugTube Frontend",
          "type": "fargate",
          "watchPaths": ["./web/**"],
          "dockerfilePath": "./web/Dockerfile",
          "dockerContext": "./web",
          "port": 3000,
          "cpu": 0.25,
          "memory": 0.5,
          "domain": "*.preview.pugtube.dev",
          "minInstances": 1,
          "maxInstances": 1,
          "dependsOn": ["backend"],
          "envVariables": {
            "NODE_ENV": "production",
            "DATABASE_URL": {
              "fromService": {
                "id": "db",
                "value": "dbConnectionString"
              }
            }
          }
        },
        {
          "id": "backend",
          "name": "PugTube Backend",
          "type": "fargate",
          "dockerfilePath": "./api/Dockerfile",
          "dockerContext": "./api",
          "watchPaths": ["./api/**"],
          "cpu": 0.25,
          "memory": 0.5,
          "domain": "*.api.pugtube.dev",
          "port": 8080,
          "minInstances": 1,
          "maxInstances": 1,
          "healthCheckPath": "/health",
          "dependsOn": ["db"],
          "envVariables": {
            "DEBUG": false,
            "BASE_URL": "https://*,api.pugtube.dev",
            "DATABASE_URL": {
              "fromService": {
                "id": "db",
                "value": "dbConnectionString"
              }
            },
            "DOCKER_USERNAME": {
              "fromParameterStore": "fc.pugtube.env.production.ut23q03da.DOCKER_USERNAME"
            },
            "DOCKER_PASSWORD": {
              "fromParameterStore": "fc.pugtube.env.production.ut23r03wk.DOCKER_PASSWORD"
            }
          }
        },
        {
          "id": "db",
          "name": "Database",
          "type": "rds",
          "engine": "postgres",
          "engineVersion": "13",
          "instanceSize": "db.t4g.micro",
          "storage": 20,
          "private": false
        }
      ]
    }
  ]
}
