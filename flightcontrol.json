{
  "$schema": "https://app.flightcontrol.dev/schema.json",
  "environments": [
    {
      "id": "production",
      "name": "Production",
      "region": "us-west-1",
      "source": {
        "branch": "main"
      },
      "services": [
        {
          "id": "frontend",
          "name": "www.pugtube.dev",
          "type": "fargate",
          "watchPaths": [
            "./web/**"
          ],
          "cpu": 0.25,
          "memory": 0.5,
          "domain": "www.pugtube.dev",
          "minInstances": 1,
          "maxInstances": 1,
          "dockerfilePath": "./web/Dockerfile",
          "dockerContext": "./web",
          "port": 3000,
          "dependsOn": [
            "backend"
          ],
          "envVariables": {
            "NODE_ENV": "production",
            "DATABASE_URL": {
              "fromService": {
                "id": "db",
                "value": "dbConnectionString"
              }
            }
          }
        },
        {
          "id": "backend",
          "name": "api.pugtube.dev",
          "type": "fargate",
          "dockerfilePath": "./api/Dockerfile",
          "dockerContext": "./api",
          "watchPaths": [
            "./api/**"
          ],
          "cpu": 0.25,
          "memory": 0.5,
          "domain": "api.pugtube.dev",
          "port": 8080,
          "minInstances": 1,
          "maxInstances": 1,
          "dependsOn": [
            "db"
          ],
          "healthCheckPath": "/health",
          "envVariables": {
            "DEBUG": false,
            "BASE_URL": "https://api.pugtube.dev",
            "PUBLIC_URL": "https://pugtube.dev",
            "DATABASE_URL": {
              "fromService": {
                "id": "db",
                "value": "dbConnectionString"
              }
            },
            "DOCKER_USERNAME": {
              "fromParameterStore": "DOCKER_USERNAME"
            },
            "DOCKER_PASSWORD": {
              "fromParameterStore": "DOCKER_PASSWORD"
            }
          }
        },
        {
          "id": "db",
          "name": "db.pugtube.dev",
          "type": "rds",
          "engine": "postgres",
          "engineVersion": "14",
          "instanceSize": "db.t4g.micro",
          "storage": 20,
          "private": true
        },
        {
          "id": "orion",
          "name": "orion.pugtube.dev",
          "type": "fargate",
          "dockerfilePath": "./api/orion.Dockerfile",
          "dockerContext": "./api",
          "watchPaths": [
            "./api/**"
          ],
          "buildType": "docker",
          "cpu": 0.25,
          "memory": 0.5,
          "domain": "orion.pugtube.dev",
          "port": 4200,
          "minInstances": 1,
          "maxInstances": 1,
          "dependsOn": [
            "db"
          ],
          "healthCheckPath": "/health",
          "envVariables": {
            "PREFECT_ORION_API_HOST": "orion.pugtube.dev",
            "PREFECT_ORION_API_PORT": 4200,
            "PREFECT_ORION_DATABASE_CONNECTION_URL": {
              "fromParameterStore": "PREFECT_ORION_DATABASE_CONNECTION_URL"
            },
            "DOCKER_USERNAME": {
              "fromParameterStore": "DOCKER_USERNAME"
            },
            "DOCKER_PASSWORD": {
              "fromParameterStore": "DOCKER_PASSWORD"
            }
          }
        },
        {
          "id": "agent",
          "name": "agent.pugtube.dev",
          "type": "fargate-worker",
          "buildType": "docker",
          "cpu": 0.25,
          "memory": 0.5,
          "dockerfilePath": "./api/agent.Dockerfile",
          "dockerContext": "./api",
          "watchPaths": [
            "./api/**"
          ],
          "dependsOn": [
            "db",
            "orion"
          ],
          "envVariables": {
            "DEBUG": false,
            "BASE_URL": "https://orion.pugtube.dev",
            "PUBLIC_URL": "https://orion.pugtube.dev",
            "DATABASE_URL": {
              "fromService": {
                "id": "db",
                "value": "dbConnectionString"
              }
            },
            "PREFECT_API_URL": "https://orion.pugtube.dev/api",
            "DOCKER_USERNAME": {
              "fromParameterStore": "DOCKER_USERNAME"
            },
            "DOCKER_PASSWORD": {
              "fromParameterStore": "DOCKER_PASSWORD"
            }
          }
        }
      ]
    }
  ]
}
